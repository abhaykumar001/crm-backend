{
  "name": "modern-crm-backend",
  "version": "1.0.0",
  "description": "Modern CRM Backend API with Node.js, TypeScript, and Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "prisma generate && prisma migrate deploy && tsc",
    "start": "node dist/index.js",
    "postinstall": "prisma generate && prisma migrate deploy && npm run seed:prod || true",
    "seed:prod": "ts-node prisma/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:deploy": "prisma migrate deploy",
    "db:migrate": "prisma migrate dev --name init",
    "db:seed": "ts-node prisma/seeds/index.ts",
    "db:seed:campaigns": "ts-node prisma/seeds/01-campaigns-sources.seed.ts",
    "db:seed:commissions": "ts-node prisma/seeds/02-commission-slabs.seed.ts",
    "db:seed:settings": "ts-node prisma/seeds/03-system-settings.seed.ts",
    "db:seed:migrate-leads": "ts-node prisma/seeds/04-migrate-lead-assignments.seed.ts",
    "db:seed:events": "ts-node prisma/seeds/05-events-dnd.seed.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "crm",
    "api",
    "nodejs",
    "typescript",
    "prisma",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bull": "^3.15.9",
    "@types/ioredis": "^4.28.10",
    "@types/node-cron": "^3.0.11",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.16.3",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.8",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^6.14.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
